<% if @results.blank? %>
<p>There are not any users currently in the system.</p>
<% else %>
<div class="container">
	<div class="row">
		<div class="span5">
            <table class="table table-striped table-condensed">
                  <thead>
                  <tr>
                      <th>Id/Permalink</th>
                      <th>Email</th>
                      <th>User type</th>
                      <th>Credit/subscription</th>
                      <th>Creation Date</th>
                      <th>Actions</th>
                  </tr>
              </thead>
              <tbody>
                <% @results.each do |users| %>
                <tr>
                    <td><%= users.id_permalink %></td>
                    <td><%= users.email %></td>
                    <td><%= users.usertype %></td>
                    <td><%= users.credit_subscription %></td>
                    <td><%= users.creation_date %></td>
                    <td><i class="glyphicon glyphicon-calendar"></i>  <i class="glyphicon glyphicon-piggy-bank"></i>  <i class="glyphicon glyphicon-user"></i>  <i class="glyphicon glyphicon-remove-circle"></i></td>
                </tr>
                <%end %>
              </tbody>
            </table>
            </div>
	</div>
</div>
<% end %>
